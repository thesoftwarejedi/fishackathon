    $(function () {
     
       


        $.get("http://localhost:32809/api/CountAndWeight", function (data, status) {
           var taxiData = data.map(function(e) {
                return new google.maps.LatLng(e.Latitude, e.longitude);
            });
            var mapOptions = {
                center: new google.maps.LatLng(12.1252, 122.433523),
                zoom: 6,
                mapTypeId: google.maps.MapTypeId.SATELLITE
            };
            map = new google.maps.Map(document.getElementById("map-canvas"),
                mapOptions);


            var pointArray = new google.maps.MVCArray(taxiData);

            var heatmap = new google.maps.visualization.HeatmapLayer({
                data: pointArray
            });
            heatmap.setMap(map);
           
         
        });
    });

    function Update() {
        $.get("http://localhost:32809/api/CountAndWeight?start=" + $('#startDate').val() + "&end=" + $('#endDate').val(), function(data, status) {
            var taxiData = data.map(function(e) {
                return new google.maps.LatLng(e.Latitude, e.longitude);
            });
            var mapOptions = {
                center: new google.maps.LatLng(12.1252, 122.433523),
                zoom: 6,
                mapTypeId: google.maps.MapTypeId.SATELLITE
            };
            map = new google.maps.Map(document.getElementById("map-canvas"),
                mapOptions);


            var pointArray = new google.maps.MVCArray(taxiData);

            var heatmap = new google.maps.visualization.HeatmapLayer({
                data: pointArray
            });
            heatmap.setMap(map);
        });
    }
    

</script>




